# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tutor_platform_db?schema=public"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Application
PORT=3000
NODE_ENV="development"
API_VERSION="v1"

# File Upload
UPLOAD_DEST="./uploads"
MAX_FILE_SIZE=10485760  # 10MB

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
SMTP_FROM="Tutor Platform <noreply@tutorplatform.com>"

# AI Writing Assessment
AI_ASSESSMENT_API_URL="https://api.openai.com/v1"
AI_ASSESSMENT_API_KEY="your-openai-api-key"

# Rate Limiting
THROTTLE_TTL=60000  # 1 minute
THROTTLE_LIMIT=100  # 100 requests per minute

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Redis (for caching and sessions)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Storage
STORAGE_TYPE="local"  # local, s3, cloudinary
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_S3_BUCKET=""

# Cloudinary
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET="" 